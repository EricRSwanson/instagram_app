<% @posts.each do |x| %>
	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
	    <div class="panel panel-default">
	      <div class="panel-body">
	        <%= image_tag x.image.url(:medium) %>
			<br>
			<h5 class="text-left"><%= x.description %></h5>
	      </div>
	    </div>
	  </div>
	</div>
<% end %>